<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SignInActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/signIn_Logo"
            android:layout_width="321dp"
            android:layout_height="117dp"
            android:src="#D8D8D8"
            />
        <EditText
            android:id="@+id/signIn_IdEditText"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:hint="ID"
            android:textColorHint="#D8D8D8"
            android:textColor="@color/black"
            android:inputType="textEmailAddress"
            android:paddingLeft="20dp"
            android:background="@mipmap/sign_in_id"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            />
        <EditText
            android:id="@+id/signIn_PasswordEditText"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:hint="Password"
            android:textColorHint="#D8D8D8"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:background="@mipmap/sign_in_password"
            android:layout_gravity="center"
            />
        <ImageView
            android:id="@+id/signIn_Login_Button"
            android:layout_width="290dp"
            android:layout_height="34dp"
            android:src="@mipmap/login_in_button"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            />
    </LinearLayout>
</FrameLayout>