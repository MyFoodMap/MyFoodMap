<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">
    <ImageView
        android:id="@+id/mainactivity_loading_4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="center"
        android:src="@drawable/mainactivity_loading_4_pixel"
        android:padding="100dp"/>
    <ImageView
        android:id="@+id/mainactivity_loading_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="center"
        android:src="@drawable/mainactivity_loading_3_pixel"
        android:padding="100dp"/>
    <ImageView
        android:id="@+id/mainactivity_loading_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="center"
        android:src="@drawable/mainactivity_loading_2_pixel"
        android:padding="100dp"/>
    <ImageView
        android:id="@+id/mainactivity_loading_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="center"
        android:src="@drawable/mainactivity_loading_1_pixel"
        android:padding="100dp"/>
</FrameLayout>