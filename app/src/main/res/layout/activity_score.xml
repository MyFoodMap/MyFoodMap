<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ScoreActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/score_Logo"
            android:layout_width="127dp"
            android:layout_height="40.95dp"
            android:background="@color/gray"
            android:layout_margin="10dp"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                <TextView
                    android:id="@+id/score_StoreName"
                    android:layout_width="70dp"
                    android:layout_height="20dp"
                    android:text="가게이름"
                    android:textColor="@color/black"
                    />
                <ImageView
                    android:id="@+id/score_Photo"
                    android:layout_width="290dp"
                    android:layout_height="290dp"
                    android:src="@color/gray"
                    />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp">
                        <ImageView
                            android:id="@+id/Score_PicturePage1"
                            android:layout_width="4dp"
                            android:layout_height="4dp"
                            android:background="@mipmap/score_page_picture"
                            />
                        <ImageView
                            android:id="@+id/Score_PicturePage2"
                            android:layout_width="4dp"
                            android:layout_height="4dp"
                            android:layout_marginLeft="7dp"
                            android:background="@mipmap/score_page_picture"
                            />
                        <ImageView
                            android:id="@+id/Score_PicturePage3"
                            android:layout_width="4dp"
                            android:layout_height="4dp"
                            android:layout_marginLeft="7dp"
                            android:background="@mipmap/score_page_picture"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="20dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="40">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/score_TasteRange"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="맛"
                                android:textSize="20sp"
                                android:textColor="@color/black"
                                android:layout_gravity="center|start"
                                android:layout_weight="1"
                                />
                            <ImageView
                                android:id="@+id/score_Taste1"
                                android:layout_width="25dp"
                                android:layout_height="38.8dp"
                                android:layout_marginLeft="30dp"
                                android:src="@mipmap/score_zero"
                                android:layout_weight="1"
                            />
                            <ImageView
                                android:id="@+id/score_Taste2"
                                android:layout_width="25dp"
                                android:layout_height="38.8dp"
                                android:src="@mipmap/score_zero"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                />
                            <ImageView
                                android:id="@+id/score_Taste3"
                                android:layout_width="25dp"
                                android:layout_height="38.8dp"
                                android:layout_marginLeft="10dp"
                                android:src="@mipmap/score_zero"
                                android:layout_weight="1"
                                />
                            <ImageView
                                android:id="@+id/score_Taste4"
                                android:layout_width="25dp"
                                android:layout_height="38.8dp"
                                android:layout_marginLeft="10dp"
                                android:src="@mipmap/score_zero"
                                android:layout_weight="1"
                                />
                            <ImageView
                                android:id="@+id/score_Taste5"
                                android:layout_width="25dp"
                                android:layout_height="38.8dp"
                                android:layout_marginLeft="10dp"
                                android:src="@mipmap/score_zero"
                                android:layout_weight="1"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.0"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:layout_marginLeft="20dp"
                                android:layout_gravity="center"
                                android:id="@+id/score_TasteScore"
                                android:layout_weight="1"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/score_PriceRange"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="가격"
                                android:textSize="20sp"
                                android:textColor="@color/black"
                                android:layout_gravity="center|start"
                                android:layout_weight="1"
                                />
                            <ImageView
                                android:id="@+id/score_Price1"
                                android:layout_width="25dp"
                                android:layout_height="38.8dp"
                                android:layout_marginLeft="11.5dp"
                                android:src="@mipmap/score_zero"
                                android:layout_weight="1"
                                />
                            <ImageView
                                android:id="@+id/score_Price2"
                                android:layout_width="25dp"
                                android:layout_height="38.8dp"
                                android:src="@mipmap/score_zero"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                />
                            <ImageView
                                android:id="@+id/score_Price3"
                                android:layout_width="25dp"
                                android:layout_height="38.8dp"
                                android:layout_marginLeft="10dp"
                                android:src="@mipmap/score_zero"
                                android:layout_weight="1"
                                />
                            <ImageView
                                android:id="@+id/score_Price4"
                                android:layout_width="25dp"
                                android:layout_height="38.8dp"
                                android:layout_marginLeft="10dp"
                                android:src="@mipmap/score_zero"
                                android:layout_weight="1"
                                />
                            <ImageView
                                android:id="@+id/score_Price5"
                                android:layout_width="25dp"
                                android:layout_height="38.8dp"
                                android:layout_marginLeft="10dp"
                                android:src="@mipmap/score_zero"
                                android:layout_weight="1"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.0"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:layout_marginLeft="20dp"
                                android:layout_gravity="center"
                                android:id="@+id/score_PriceScore"
                                android:layout_weight="1"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/score_CleanRange"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="청결"
                                android:textSize="20sp"
                                android:textColor="@color/black"
                                android:layout_gravity="center|start"
                                android:layout_weight="1"
                                />
                            <ImageView
                                android:id="@+id/score_Clean1"
                                android:layout_width="25dp"
                                android:layout_height="38.8dp"
                                android:layout_marginLeft="11.5dp"
                                android:src="@mipmap/score_zero"
                                android:layout_weight="1"
                                />
                            <ImageView
                                android:id="@+id/score_Clean2"
                                android:layout_width="25dp"
                                android:layout_height="38.8dp"
                                android:src="@mipmap/score_zero"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                />
                            <ImageView
                                android:id="@+id/score_Clean3"
                                android:layout_width="25dp"
                                android:layout_height="38.8dp"
                                android:layout_marginLeft="10dp"
                                android:src="@mipmap/score_zero"
                                android:layout_weight="1"
                                />
                            <ImageView
                                android:id="@+id/score_Clean4"
                                android:layout_width="25dp"
                                android:layout_height="38.8dp"
                                android:layout_marginLeft="10dp"
                                android:src="@mipmap/score_zero"
                                android:layout_weight="1"
                                />
                            <ImageView
                                android:id="@+id/score_Clean5"
                                android:layout_width="25dp"
                                android:layout_height="38.8dp"
                                android:layout_marginLeft="10dp"
                                android:src="@mipmap/score_zero"
                                android:layout_weight="1"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.0"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:layout_marginLeft="20dp"
                                android:layout_gravity="center"
                                android:id="@+id/score_CleanScore"
                                android:layout_weight="1"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_gravity="bottom">
                        <TextView
                            android:id="@+id/score_AverageScore"
                            android:layout_width="55dp"
                            android:layout_height="32dp"
                            android:text="0.0점"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:paddingTop="3dp"
                            android:paddingLeft="4dp"
                            android:background="@mipmap/average_score"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="7dp">
                            <ImageView
                                android:id="@+id/score_ScoreSave"
                                android:layout_width="24dp"
                                android:layout_height="12dp"
                                android:background="@mipmap/review_save"
                                android:layout_weight="1"
                                />
                            <ImageView
                                android:id="@+id/score_ScoreEdit"
                                android:layout_width="24dp"
                                android:layout_height="12dp"
                                android:background="@mipmap/review_edit"
                                android:layout_weight="1"
                                android:layout_marginLeft="6dp"
                                />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp">
                <ImageView
                    android:id="@+id/score_Review"
                    android:layout_width="match_parent"
                    android:layout_height="67dp"
                    android:background="@mipmap/review"
                    />
                <ImageView
                    android:id="@+id/score_ReviewEdit"
                    android:layout_width="24dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="14dp"
                    android:background="@mipmap/review_edit"
                    />
                <ImageView
                    android:id="@+id/score_ReviewSave"
                    android:layout_width="24dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="144dp"
                    android:background="@mipmap/review_save"
                    />
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나의 한줄평"
                    android:textColor="@color/black"
                    />
                </FrameLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99ffffff"
        android:visibility="invisible"
        android:id="@+id/score_ScoreBackground"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@color/white"
        android:id="@+id/score_ScoreRange"
        android:visibility="invisible"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0점"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:id="@+id/score_Score"
                android:layout_gravity="center_horizontal"
                />
            <Button
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:id="@+id/score_Save"
                android:text="완료"
                android:textSize="20sp"
                android:background="#FDE934"
                android:layout_gravity="end|center_vertical"
                android:layout_marginRight="10dp"
                />
        </FrameLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/score_Score1"
                android:layout_width="50dp"
                android:layout_height="77.6dp"
                android:background="@mipmap/score_zero"
                />
            <ImageView
                android:id="@+id/score_Score2"
                android:layout_width="50dp"
                android:layout_height="77.6dp"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/score_zero"
                />
            <ImageView
                android:id="@+id/score_Score3"
                android:layout_width="50dp"
                android:layout_height="77.6dp"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/score_zero"
                />
            <ImageView
                android:id="@+id/score_Score4"
                android:layout_width="50dp"
                android:layout_height="77.6dp"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/score_zero"
                />
            <ImageView
                android:id="@+id/score_Score5"
                android:layout_width="50dp"
                android:layout_height="77.6dp"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/score_zero"
                />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>